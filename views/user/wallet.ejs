<%- include("../../views/partials/user/header") %>

<style>
   /* Enhanced Wallet Styles */
.wallet-container {
    background: linear-gradient(135deg, #f6f9fc 0%, #f1f4f8 100%);
    min-height: calc(100vh - 100px);
    padding: 4rem;
    padding-top: 0.5rem;
    transition: all 0.3s ease;
}

.wallet-card {
    width: 100%;
    margin: 0 auto;
    background: white;
    border-radius: 20px;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
    transition: transform 0.3s ease;
}

.wallet-card:hover {
    transform: translateY(-5px);
}

.wallet-header {
    padding: 1.5rem 2rem;
    border-bottom: 1px solid rgba(237, 242, 247, 0.7);
    background: linear-gradient(to right, #ffffff, #f8fafc);
    border-radius: 20px 20px 0 0;
}

.wallet-header h2 {
    color: #1a1a1a;
    font-size: 1.75rem;
    font-weight: 700;
    margin: 0;
    display: flex;
    align-items: center;
    gap: 12px;
}

.wallet-header i {
    color: #00897b;
    font-size: 1.5rem;
    transition: transform 0.3s ease;
}

.wallet-header:hover i {
    transform: scale(1.1);
}

.wallet-balance {
    background: linear-gradient(135deg, #f8fafc 0%, #eef2f7 100%);
    padding: 2rem;
    border-bottom: 1px solid rgba(237, 242, 247, 0.7);
    transition: all 0.3s ease;
}

.wallet-balance:hover {
    background: linear-gradient(135deg, #eef2f7 0%, #f8fafc 100%);
}

.balance-info h3 {
    color: #64748b;
    font-size: 0.8rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 1px;
    margin: 0 0 0.5rem 0;
}

.balance-amount {
    color: #00897b;
    font-size: 2rem;
    font-weight: 700;
    margin: 0;
    text-shadow: 0 2px 4px rgba(0, 137, 123, 0.1);
}

.wallet-body {
    padding: 2rem;
}

.transaction-table {
    width: 100%;
    border-collapse: separate;
    border-spacing: 0;
    margin-top: 1rem;
}

.transaction-table th {
    background: #f8fafc;
    color: #64748b;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    font-size: 0.75rem;
    padding: 1rem 1.5rem;
    text-align: left;
    border-bottom: 2px solid #edf2f7;
}

.transaction-table td {
    padding: 1.25rem 1.5rem;
    color: #1a1a1a;
    font-size: 0.95rem;
    border-bottom: 1px solid #edf2f7;
    transition: all 0.2s ease;
}

.transaction-table tr {
    transition: all 0.2s ease;
}

.transaction-table tr:hover {
    background: rgba(248, 250, 252, 0.8);
    cursor: pointer;
}

.transaction-table tr:hover td {
    transform: translateX(5px);
}

.status-badge {
    padding: 0.5rem 1rem;
    border-radius: 999px;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    transition: all 0.3s ease;
}

.status-credit {
    background: rgba(22, 101, 52, 0.1);
    color: #166534;
}

.status-credit:hover {
    background: rgba(22, 101, 52, 0.2);
}

.status-debit {
    background: rgba(153, 27, 27, 0.1);
    color: #991b1b;
}

.status-debit:hover {
    background: rgba(153, 27, 27, 0.2);
}

.amount-credit {
    color: #166534;
    font-weight: 600;
    transition: all 0.2s ease;
}

.amount-debit {
    color: #991b1b;
    font-weight: 600;
    transition: all 0.2s ease;
}

.transaction-table tr:hover .amount-credit,
.transaction-table tr:hover .amount-debit {
    transform: scale(1.05);
}

/* Responsive Design */
@media (max-width: 768px) {
    .wallet-container {
        padding: 1rem;
    }

    .wallet-header, 
    .wallet-balance {
        padding: 1.5rem;
    }

    .balance-amount {
        font-size: 2rem;
    }

    .wallet-body {
        padding: 1rem;
    }

    .table-container {
        overflow-x: auto;
        margin: 0 -1rem;
        padding: 0 1rem;
    }

    .transaction-table th, 
    .transaction-table td {
        padding: 1rem;
    }

    .status-badge {
        padding: 0.35rem 0.75rem;
    }
}

/* Animation for empty state */
@keyframes pulseIcon {
    0% { transform: scale(1); }
    50% { transform: scale(1.1); }
    100% { transform: scale(1); }
}

.empty-state-icon {
    animation: pulseIcon 2s infinite ease-in-out;
    color: #64748b;
}
</style>

<section class="breadcrumb" style="width: 100%; height: 80px; display: flex; margin-top: -40px; justify-content: center; align-items: center; background-color: #ffff;">
    <ul class="breadcrumb__list container" style="margin-left: -25px;">
      <li><a href="/" class="breadcrumb__link" style="font-size: 12px;">Home</a></li>
      <li><span class="breadcrumb__link">></span></li>
      <li><a href="/userProfile" class="breadcrumb__link" style="font-size: 12px;">Profile</a></li>
      <li><span class="breadcrumb__link">></span></li>
      <li><a  class="breadcrumb__link" style="font-size: 12px;">Wallet</a></li>
    </ul>
  </section>

<div class="dashboard-container" style="width: 100%;">
<div class="wallet-container" style="width: 100%;">
    <div class="wallet-card">
        <div class="wallet-header">
            <h2>
                <i class="fas fa-wallet"></i>
                Wallet History
            </h2>
        </div>

        <div class="wallet-balance">
            <div class="balance-info">
                <h3>Current Balance</h3>
                <p class="balance-amount">₹<%= wallet.balance ? wallet.balance.toFixed(2) : '0.00' %></p>
            </div>
        </div>

        <div class="wallet-body">
            <% if (wallet && wallet.transactions && wallet.transactions.length > 0) { %>
                <div class="table-container">
                    <table class="transaction-table">
                        <thead>
                            <tr>
                                <th>Date</th>
                                <th>Transaction ID</th>
                                <th>Type</th>
                                <th>Amount</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% wallet.transactions.forEach(transaction => { %>
                                <tr>
                                    <td><%= new Date(transaction.date).toLocaleDateString('en-US', { 
                                        year: 'numeric', 
                                        month: 'short', 
                                        day: 'numeric' 
                                    }) %></td>
                                    <td><%= transaction.transactionId || '-' %></td>
                                    <td>
                                        <span class="status-badge <%= transaction.type.toLowerCase() === 'credit' ? 'status-credit' : 'status-debit' %>">
                                            <%= transaction.type %>
                                        </span>
                                    </td>
                                    <td class="<%= transaction.type.toLowerCase() === 'credit' ? 'amount-credit' : 'amount-debit' %>">
                                        <%= transaction.type.toLowerCase() === 'credit' ? '+' : '-' %>₹<%= Math.abs(transaction.amount).toFixed(2) %>
                                    </td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
            <% } else { %>
                <div style="text-align: center; padding: 40px 20px; color: #64748b;">
                    <i class="fas fa-receipt" style="font-size: 2rem; margin-bottom: 16px;"></i>
                    <p style="margin: 0;">No transactions found in your wallet history.</p>
                </div>
            <% } %>

            <% if (totalPage > 1) { %>
                <div style="display: flex; justify-content: center; margin-top: 20px;">
                    <nav aria-label="Page navigation">
                        <ul class="pagination">
                            <% if (currentPage > 1) { %>
                                <li class="page-item">
                                    <a class="page-link" href="/wallet?page=<%= currentPage - 1 %>" aria-label="Previous">
                                        <span aria-hidden="true">&laquo;</span>
                                    </a>
                                </li>
                            <% } %>
                            
                            <% for(let i = 1; i <= totalPage; i++) { %>
                                <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                                    <a class="page-link" href="/wallet?page=<%= i %>"><%= i %></a>
                                </li>
                            <% } %>
                            
                            <% if (currentPage < totalPage) { %>
                                <li class="page-item">
                                    <a class="page-link" href="/wallet?page=<%= currentPage + 1 %>" aria-label="Next">
                                        <span aria-hidden="true">&raquo;</span>
                                    </a>
                                </li>
                            <% } %>
                        </ul>
                    </nav>
                </div>
            <% } %>
        </div>
    </div>
</div>
</div>



<%- include("../../views/partials/user/footer") %>