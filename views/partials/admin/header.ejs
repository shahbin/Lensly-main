/* General Body Styling */
/* General */
body {
  font-family: Arial, sans-serif;
  margin: 0;
  background-color: #f4f4f9;
}

/* Sidebar */
.sidebar {
  width: 200px;
  background-color: #f9f9f9;
  padding: 20px;
  border: 1px solid #ddd;
}

.sidebar ul {
  list-style-type: none;
  padding: 0;
  margin: 0;
}

.sidebar ul li {
  display: flex;
  align-items: center;
  margin-bottom: 15px;
  font-size: 16px;
  color: #666;
  cursor: pointer;
  transition: color 0.3s ease;
}

.sidebar ul li i.icon {
  font-size: 20px;
  width: 30px; /* Ensure all icons take up the same width */
  text-align: center; /* Center-align the icon within its space */
  color: #bbb;
  margin-right: 10px;
  transition: color 0.3s ease;
}

.sidebar ul li span {
  flex: 1; /* Ensures the text aligns with the icons */
}

.sidebar ul li:hover {
  color: #333;
}

.sidebar ul li:hover i.icon {
  color: #007bff;
}


/* Topbar */
.topbar {
  margin-left: 250px;
  height: 60px;
  background-color: #3a79ff;
  color: #ffffff;
  display: flex;
  align-items: center;
  padding: 0 20px;
  justify-content: space-between;
}

.topbar .profile {
  display: flex;
  align-items: center;
}

.topbar .profile img {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  margin-left: 10px;
  cursor: pointer;
  transition: transform 0.2s;
}

.topbar .profile img:hover {
  transform: scale(1.1);
}

/* Main Content */
.main-content {
  margin-left: 250px;
  padding: 20px;
}

.dashboard-header {
  font-size: 24px;
  font-weight: bold;
  color: #333333;
}

.card {
  background-color: #ffffff;
  padding: 20px;
  margin: 15px 0;
  border-radius: 10px;
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
}

.card:hover {
  box-shadow: 0 6px 8px rgba(0, 0, 0, 0.2);
}

/* Buttons */
.button {
  padding: 10px 20px;
  background-color: #3a79ff;
  color: #ffffff;
  border: none;
  border-radius: 5px;
  cursor: pointer;
  transition: background 0.3s;
}

.button:hover {
  background-color: #2d5fcc;
}

